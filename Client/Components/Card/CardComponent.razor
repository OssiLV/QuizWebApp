@using QuizWebApp.Shared.ResponseDtos;

<MudCard Class="cursor-pointer" Style="border-radius: 1rem">
    <MudCardHeader Class="py-0" >
        <MudText Typo="Typo.h6">@Quiz.Title</MudText>
    </MudCardHeader>
    <MudCardContent Class="pt-0 ">
        <MudChip Size="Size.Small">@Quiz.NumberOfQuestions Terms</MudChip>
    </MudCardContent>
    <MudCardActions Class="mt-2">
        <MudAvatar Variant="Variant.Filled" Color="Color.Surface" Class="mr-2">T</MudAvatar>
        <MudText>OssiLV</MudText>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public QuizResponse Quiz { get; set; }
}